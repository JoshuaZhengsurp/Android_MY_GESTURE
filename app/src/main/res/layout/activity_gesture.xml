<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gesture_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gesture.GestureActivity">

    <!-- 主要内容区域 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 应用标题 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MY GESTURE"
                android:textSize="32sp"
                android:textColor="#888888"
                android:fontFamily="sans-serif-light"
                android:layout_marginBottom="8dp" />

            <!-- 副标题 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手势触发区域和功能自定义"
                android:textSize="16sp"
                android:textColor="#00BCD4"
                android:layout_marginBottom="32dp" />

            <!-- 左边缘设置卡片 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <com.example.mygesture.gesture.view.EdgeGestureConfigView
                    android:id="@+id/left_edge_config"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </androidx.cardview.widget.CardView>

            <!-- 右边缘设置卡片 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <com.example.mygesture.gesture.view.EdgeGestureConfigView
                    android:id="@+id/right_edge_config"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </androidx.cardview.widget.CardView>

            <!-- 悬浮球控制卡片 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <com.example.mygesture.gesture.view.FloatingBallGestureConfigView
                  android:id="@+id/floating_ball_config"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
