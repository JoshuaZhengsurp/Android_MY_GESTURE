<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 边缘开关 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tv_edge_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="边缘"
            android:textSize="18sp"
            android:textColor="#333333" />

        <Switch
            android:id="@+id/switch_edge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false" />

    </LinearLayout>

    <!-- 手势配置容器 -->
    <LinearLayout
        android:id="@+id/gesture_config_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- 手势功能列表 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F8F8F8"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <!-- 右滑 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/swipe_horizontal_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="右滑"
                    android:textSize="16sp"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/tv_swipe_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/choose"
                    android:textSize="16sp"
                    android:textColor="#00BCD4"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp" />

            </LinearLayout>

            <!-- 上滑 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="上滑"
                    android:textSize="16sp"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/tv_swipe_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/choose"
                    android:textSize="16sp"
                    android:textColor="#00BCD4"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp" />

            </LinearLayout>

            <!-- 下滑 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="下滑"
                    android:textSize="16sp"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/tv_swipe_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/choose"
                    android:textSize="16sp"
                    android:textColor="#00BCD4"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp" />

            </LinearLayout>

            <!-- 长按并右滑 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/long_press_swipe_right_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="长按并右滑"
                    android:textSize="16sp"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/tv_long_press_swipe_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/choose"
                    android:textSize="16sp"
                    android:textColor="#00BCD4"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp" />

            </LinearLayout>

            <!-- 长按并上滑 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="长按并上滑"
                    android:textSize="16sp"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/tv_long_press_swipe_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/choose"
                    android:textSize="16sp"
                    android:textColor="#00BCD4"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp" />

            </LinearLayout>

            <!-- 长按并下滑 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="长按并下滑"
                    android:textSize="16sp"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/tv_long_press_swipe_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/choose"
                    android:textSize="16sp"
                    android:textColor="#00BCD4"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- 触发区设置 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 触发区高度 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tv_trigger_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="触发区高度: 50%"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp" />

                <SeekBar
                    android:id="@+id/seekbar_trigger_height"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="50" />

            </LinearLayout>

            <!-- 触发区宽度 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tv_trigger_width"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="触发区宽度: 30%"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp" />

                <SeekBar
                    android:id="@+id/seekbar_trigger_width"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="30" />

            </LinearLayout>

            <!-- 触发区位置 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_trigger_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="触发区位置: 20%"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp" />

                <SeekBar
                    android:id="@+id/seekbar_trigger_position"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="20" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
