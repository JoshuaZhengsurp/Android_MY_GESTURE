<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- 设置背景颜色为浅蓝色 -->
    <solid android:color="@android:color/holo_blue_light" />
    
    <!-- 设置圆角半径为12dp -->
    <corners android:radius="12dp" />
    
    <!-- 设置内边距 -->
    <padding
        android:left="6dp"
        android:top="2dp"
        android:right="6dp"
        android:bottom="2dp" />
        
</shape>
